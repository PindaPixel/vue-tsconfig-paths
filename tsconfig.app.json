{
    "compilerOptions": {
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "target": "ESNext",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "baseUrl": ".",
        // module, target, and lib should align with vite's build target
        // https://vitejs.dev/config/build-options.html#build-target
        "module": "esnext",
        "moduleResolution": "Bundler",
        "paths": {
            "~/*": [
                "./src/*"
            ]
        },
        "resolveJsonModule": true,
        "types": [],
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "./env.d.ts",
        "./typed-router.d.ts",
        "src/**/*.ts",
        "src/**/*.vue"
    ],
    "exclude": [
        "src/**/*.test.ts",
    ]
}